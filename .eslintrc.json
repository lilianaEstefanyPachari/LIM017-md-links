{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "prefer-destructuring": 0,
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "import/prefer-default-export": 0,
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "indent": ["error", 2],
        "semi": ["error", "always"]
    },
    "overrides": [
        {
          "files": [
              "./test/src/md-links.spec.js",
              "./src/__mocks__/lib.js",
              "./test/src/index.spec.js"
          ],
          "env": {
            "jest": true
          }
        }
      ]
}
